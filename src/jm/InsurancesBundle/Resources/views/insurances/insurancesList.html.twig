{# jm/InsurancesBundle/Resources/views/insurances/insurancesList.html.twig #}
{% extends "@Insurances/layout.html.twig" %}

{% block title categoryName %}

{% block content %}
    <div class="overview">
        <div class="overview_header">
            <h3>{{ categoryName }}</h3>
        </div>
        <div class="overview_wrap">
            {% for insurance in insurances %}
                <div class="ins_preview">
                    <a href="{{ path('show_relinsurance', {'insuranceName': insurance.name}) }}">
                        <div class="preview_header">
                            {{ insurance.name }}
                        </div>
                        <div class="preview_body">
                            {% if not insurance.description is empty %}
                                {{ insurance.description }}
                            {% endif %}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('create_relinsurance', {'categoryName': categoryName})}}">
            <div class="std_button">
                New insurance
            </div>
        </a>
    </div>
{% endblock %}